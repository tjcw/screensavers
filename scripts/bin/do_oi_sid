#!/bin/bash -x
PATH=/sbin:$PATH
lb clean
lb config --distribution=sid
cp /home/${SUDO_USER}/workspace/screensavers/lb-package-lists/$1.list.chroot \
   config/package-lists/desktop.list.chroot
cp /home/${SUDO_USER}/workspace/screensavers/files/isolinux.cfg \
   /usr/share/live/build/bootloaders/isolinux/isolinux.cfg
cp /home/${SUDO_USER}/workspace/screensavers/files/system \
   config/system
cp /home/${SUDO_USER}/workspace/screensavers/files/build \
   config/build
#cp /home/${SUDO_USER}/workspace/screensavers/files/bootstrap \
#   config/bootstrap
mkdir -p config/hooks
cp -r /home/${SUDO_USER}/workspace/screensavers/hooks/$1/. config/hooks/
mkdir -p config/content
cp -r /home/${SUDO_USER}/workspace/screensavers/content/$1/. config/content/
for i in $(seq 1 10)
do
   echo "Build pass $i"
   [[ -r system-amd64.hybrid.iso ]] || lb build 
done
